doctype html
html
  head
    meta(charset='utf-8')
    title p5-manager
    style.
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
      }
      
      .panel {
        width: 100%;
        height: 50px;
        position: fixed;
        bottom: 0;
        text-align: center;
        background-color: #fff;
      }

      .panel ul {
        padding: 0;
      }

      .panel li {
        padding: 10px;
        margin: 0;
        display: inline;
      }

      iframe {
        border: none;
        height: 100%;
      }
  body
    iframe(width='100%',height='100%', src= projectPath)
    .panel
      ul
        each project in projects
          li
            a(href='../' + project)= project
    